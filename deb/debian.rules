#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

NAME=seccubus
BASEDIR=/opt/${NAME}
HOMEDIR=${BASEDIR}
BINDIR=${BASEDIR}/bin
CONFDIR=/etc/${NAME}
WEBDIR=${BASEDIR}/www
VARDIR=/var/lib/${NAME}
USER=${NAME}
DOCDIR=/usr/share/doc/${NAME}

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp
	dh_clean

build: build-stamp

build-stamp:
	dh_testdir
	perl Makefile.PL
	touch $@

install:
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	mkdir -p $(CURDIR)/debian/tmp/${BASEDIR}
	mkdir -p $(CURDIR)/debian/tmp/${DOCDIR}/db
	mkdir -p $(CURDIR)/debian/tmp/${DOCDIR}/GUI
	mkdir -p $(CURDIR)/debian/tmp/etc/apache2/conf.d

	./install.pl -v --buildroot=$(CURDIR)/debian/tmp \
	    --confdir=${CONFDIR} --bindir=${BINDIR} --dbdir=${VARDIR} \
	    --wwwdir=${WEBDIR} --basedir=${HOMEDIR} --docdir=${DOCDIR}

binary: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs
	dh_installdocs
	dh_installexamples
	dh_installinit
	dh_installman
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

