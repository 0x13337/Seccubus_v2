<thead>
	<tr>
		<td>Host</td>
		<td>Hostname</td>
		<td>Port</td>
		<td>Scan</td>
		<td>Plugin</td>
		<td>Finding</td>
		<td>Remark</td>
		<td>Status</td>
		<td>Action</td>
	</tr>
</thead>
<tbody>
	<% if ( this.length == 0 ) { %>
		<%== $.View(
				'//seccubus/issuelink/table/views/error.ejs',
				{
					error 	: "No findings found",
					head	: false
				}
			) 
		%>
	<% } else { %>
		<% for(var i = 0; i < this.length ; i++) { %>
			<tr <%= this[i] %>>
				<%== $.View('//seccubus/issuelink/table/views/link.ejs', this[i] ) %>
			</tr>
		<% } %>
	<% } %>
</tbody>