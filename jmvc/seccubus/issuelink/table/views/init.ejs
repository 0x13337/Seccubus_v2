<% if ( this.length == 0 ) { %>
	<%== $.View(
			'//seccubus/issuelink/table/views/error.ejs',
			{
				error 	: "No findings found",
				head	: true
			}
		) 
	%>
<% } else { %>
	<thead>
		<tr>
			<th>Host</th>
			<th>Hostname</th>
			<th>Port</th>
			<th>Scan</th>
			<th>Plugin</th>
			<th>Finding</th>
			<th>Remark</th>
			<th>Status</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		<% for(var i = 0; i < this.length ; i++) { %>
			<tr class='sev_<%= this[i].severity %>' <%= this[i] %>>
				<%== $.View('//seccubus/issuelink/table/views/link.ejs', this[i] ) %>
			</tr>
		<% } %>
	</tbody>
<% } %>
