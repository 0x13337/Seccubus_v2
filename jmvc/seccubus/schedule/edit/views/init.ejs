<h2>Edit your Schedule</h2>
<table class='noborder'>
 	<tr><td class='noborder'>
		<label for='subject'>Month</label> 
	</td><td class='noborder'>
		<select name='month'>
			<option value='*' <% if(month=='*') { %>selected<% } %>>*</option>
			<% for( var i=1; i<=12; i++){ %>
				<option value='<%= i %>' <% if(month==i) { %>selected<% } %>><%= i %></option>
			<% } %>
		</select> (* - every month)
	</td></tr>
	<tr><td class='noborder'>
		<label for='trigger'>Week</label> 
	</td><td class='noborder'>
		<select name='week'>
			<option value='*' <% if(week=='*') { %>selected<% } %>>*</option>
			<% for(var i=1; i<=5; i++){ %>
				<option value='<%= i %>' <% if(week==i) { %>selected<% } %>><%= i %></option>
			<% } %>
		</select> (* - every week)
	</td></tr>
	<tr><td class='noborder'>
		<label for='trigger'>Day</label> 
	</td><td class='noborder'>
		<select name='day'>
			<option value='*' <% if(day=='*') { %>selected<% } %>>*</option>
			<% for(var i=1; i<=31; i++){ %>
				<option value='<%= i %>' <% if(day==i) { %>selected<% } %>><%= i %></option>
			<% } %>
		</select> (* - every day)
	</td></tr>
	<tr><td class='noborder'>
		<label for='trigger'>Hour</label> 
	</td><td class='noborder'>
		<select name='hour'>
			<option value='*' <% if(hour=='*') { %>selected<% } %>>*</option>
			<% for(var i=0; i<=23; i++){ %>
				<option value='<%= i %>' <% if(hour==i) { %>selected<% } %>><%= i %></option>
			<% } %>
		</select> (* - every hour)
	</td></tr>
	<tr><td class='noborder'>
		<label for='trigger'>Minute</label> 
	</td><td class='noborder'>
		<select name='min'>
			<option value='*' <% if(min=='*') { %>selected<% } %>>*</option>
			<% for(var i=0; i<=59; i++){ %>
				<option value='<%= i %>' <% if(min==i) { %>selected<% } %>><%= i %></option>
			<% } %>
		</select> (* - every minute)
	</td></tr>
	<tr><td class='noborder' colspan=2 align='right'>
		<input type='submit' value='Update Schedule'/>
		<button type='button' class='cancel'>Cancel</button>
	</td></tr>
</table>
