<td><%= name %></td>
<td><%= description %></td>
<td>
	<% if ( url != "" ) { %> 
		<a target=_blank href='<%= url %>'><%= ext_ref %></a></td>
	<% } else { %>
		<%= ext_ref %>
	<% } %>
</td>
<td><%= severity %>. <%= severityName %></td>
<td><%= statusName %></td>
<td>
	<div 
		issue_id=<%= id %>
		class='findings-expander<%= findings.length > 0 ? " collapsed" : "" %>'
		>
	<%= findings.length %>
	<br>
	</div>
	<% if ( findings.length > 0 ) { %>
		<table id='findings_issue_<%= id %>' hidden=true class=findings_issue>
				<tr>
					<td>Host</TD>
					<td>Hostname</TD>
					<td>Port</td>
					<td>Scan</td>
					<td>Plugin</td>
					<td>Finding</td>
					<td>Remark</td>
					<td>Status</td>
					<td>Action</td>
				</tr>
			<% for(var i = 0; i < findings.length ; i++) { %>
				<tr class='finding_status_<%= findings[i].status %>'>
					<td><%= findings[i].host %></td>
					<td><%= findings[i].hostName %></td>
					<td><%= findings[i].port %></td>
					<td><%= findings[i].scanName %></td>
					<td><%= findings[i].plugin %></td>
					<td><%= findings[i].find %></td>
					<td><%= findings[i].remark %></td>
					<td><%= findings[i].statusName %></td>
					<td>
						<img finding_id='<%= findings[i].id %>' src='img/edit.png' class='edit'><br>
						<img finding_id='<%= findings[i].id %>' src='img/unlink.png' class='unlink'>
					</td>
				</tr>
			<% } %>
		</table>
	<% } %>
</td>
