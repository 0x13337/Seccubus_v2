<table class='noborder'>
	<tr><td class='noborder'>
		Name :
	</td><td class='noborder'>
		<input type='input' size=78 name='name' value='<%= name %>' id='editIssueName'/>
	</td></tr>

	<tr><td class='noborder'>
		Description :
	</td><td class='noborder'>
		<input type='input' size=78 name='description' value='<%= description %>' id='editIssueDescription'/>
	</td></tr>

	<tr><td class='noborder'>
		External reference :
	</td><td class='noborder'>
		<input type='input' size=78 name='ext_ref' value='<%= ext_ref %>' id='editIssueExtRef'/>
	</td></tr>

	<tr><td class='noborder'>
		Severity :
	</td><td class='noborder'>
		<select name='severity' id='editIssueSeverity'/></select>
	</td></tr>

	<tr><td class='noborder' colspan=2>
		<input type=button newStatus=<%= status %> value='Update' class='editSetStatus'/>
		<% if ( status == 2 ) { %>
			 <input type=button newStatus=1 value='Set to Open' class='editSetStatus'/>
		<% } %>
		<% if ( status == 1 ) { %>
			<input type=button newStatus=2 value='Set to Closed' class='editSetStatus'/>
		<% } %>
		<input type=button value='Cancel' class='cancel'>
			
	</td></tr>
</table>
